<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_gameplay"
    android:background="@drawable/majors_room_scene">

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameBoard_tv"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="36sp"
        android:fontFamily="cursive"
        android:textColor="@android:color/background_light" />


    <ImageView
        android:layout_width="450dp"
        android:id="@+id/iv_gameboard"
        android:background="@drawable/gameboard"
        android:layout_height="400dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup_gameplay"
        android:orientation="horizontal"
        android:layout_above="@+id/iv_gameboard"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton7"
            android:layout_weight="1"
            app:buttonTint="@android:color/black"
            android:layout_marginRight="22dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton6"
            android:layout_weight="1"
            app:buttonTint="@android:color/black"
            android:layout_marginRight="22dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton5"
            android:layout_weight="1"
            app:buttonTint="@android:color/black"
            android:layout_marginRight="22dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton4"
            android:layout_weight="1"
            app:buttonTint="@android:color/black"
            android:layout_marginRight="22dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton3"
            android:layout_weight="1"
            app:buttonTint="@android:color/black"
            android:layout_marginRight="22dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2"
            android:layout_weight="1"
            app:buttonTint="@android:color/black"
            android:layout_marginRight="22dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton"
            android:layout_weight="1"
            app:buttonTint="@android:color/black"
            android:layout_marginRight="22dp"/>
    </RadioGroup>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/drop_button"
        android:id="@+id/button_dropbutton"
        android:layout_above="@+id/radioGroup_gameplay"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/instructions_button"
        android:layout_marginTop="29dp"
        android:id="@+id/button_instructions"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:layout_below="@+id/button_play"
        android:layout_toStartOf="@+id/radioGroup_gameplay" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/play_button"
        android:id="@+id/button_play"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:layout_below="@+id/iv_gameboard"
        android:layout_alignStart="@+id/button_instructions"
        android:layout_marginTop="21dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/settings_button"
        android:id="@+id/button_settings"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:layout_below="@+id/button_instructions"
        android:layout_alignStart="@+id/button_instructions"
        android:layout_marginTop="29dp" />

    <ImageView
        app:srcCompat="@drawable/bluearrow_right"
        android:id="@+id/arrowright_one"
        android:layout_height="50dp"
        android:layout_above="@+id/button_instructions"
        android:layout_toStartOf="@+id/button_dropbutton"
        android:layout_width="90dp" />

    <ImageView
        app:srcCompat="@drawable/bluearrow_right"
        android:id="@+id/arrowright_two"
        android:layout_height="50dp"
        android:layout_width="90dp"
        android:layout_alignTop="@+id/button_instructions"
        android:layout_alignStart="@+id/arrowright_one" />

    <ImageView
        app:srcCompat="@drawable/bluearrow_right"
        android:id="@+id/arrowright_three"
        android:layout_height="50dp"
        android:layout_width="90dp"
        android:layout_alignTop="@+id/button_settings"
        android:layout_alignStart="@+id/arrowright_two" />

</RelativeLayout>